{
  "name": "brandnpatterson.surge.sh",
  "version": "1.0.0",
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r style.css",
    "build:all": "npm-run-all build:all:php build:css",
    "build:all:php": "npm-run-all -p build:components build:pages build:php build:posts",
    "build:components": "html-minifier --input-dir ./app/php/components --output-dir ./dist/components remove-comments --collapse-whitespace",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:images": "imagemin app/images/* -o dist/images",
    "build:pages": "html-minifier --input-dir ./app/php/pages --output-dir ./dist/pages remove-comments --collapse-whitespace",
    "build:php": "html-minifier --input-dir ./app/php/index --output-dir ./ --remove-comments --collapse-whitespace",
    "build:posts": "html-minifier --input-dir ./app/php/posts --output-dir ./dist/posts remove-comments --collapse-whitespace",
    "clean": "rimraf *.php dist/css dist/components dist/pages/ dist/posts",
    "clean:images": "rimraf dist/images/*",
    "sass": "node-sass --output-style compressed -o dist/css app/sass",
    "server": "gulp",
    "start": "npm run clean && npm run build:all && npm run server & npm run watch:all",
    "watch:all": "npm-run-all -p watch:all:php watch:css",
    "watch:all:php": "npm-run-all -p watch:components watch:pages watch:php watch:posts",
    "watch:components": "onchange 'app/php/components/*' -- npm run build:all:php",
    "watch:css": "onchange 'app/sass/**/*.sass' -- npm run build:css",
    "watch:pages": "onchange 'app/php/pages/*' -- npm run build:all:php",
    "watch:php": "onchange 'app/php/index/*' -- npm run build:all:php",
    "watch:posts": "onchange 'app/php/posts/**/*' -- npm run build:all:php"
  },
  "author": "Brandon Patterson",
  "description": "Brandon Patterson's thoughts on tech",
  "main": "index.html",
  "url": "",
  "homepage": "",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "browser-sync": "^2.18.6",
    "gulp": "^3.9.1",
    "gulp-mamp": "0.0.5",
    "html-minifier": "^3.3.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.11.2",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brandnpatterson/brandnpatterson.surge.sh"
  },
  "bugs": {
    "url": "https://github.com/brandnpatterson/brandnpatterson.surge.sh/issues"
  }
}
